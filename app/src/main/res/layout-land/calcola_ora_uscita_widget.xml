<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="@android:color/transparent"
    android:clickable="true"
    android:id="@+id/calcola_ora_uscitaWDG">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedrect"
            android:backgroundTint="@android:color/background_dark"
            android:clickable="false">

            <TextView android:id="@+id/appwidget_text" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appwidget_text"
                android:textColor="#ffffff" android:textSize="24sp" android:textStyle="bold|italic"
                android:contentDescription="@string/appwidget_text"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elegantTextHeight="false"
                android:padding="@dimen/abc_action_bar_subtitle_bottom_margin_material" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OraUscitaWidgetLBL"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:contentDescription="@string/appwidget_text"
                android:background="@android:color/transparent"
                android:padding="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/OraUscitaTXT"
                android:layout_toStartOf="@+id/OraUscitaTXT" />

            <TextView
                android:id="@+id/OraUscitaTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OraUscitaValueWidgetLBL"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:contentDescription="@string/appwidget_text"
                android:background="@android:color/transparent"
                android:padding="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/OraIngressoTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OraIngressoValueWidgetLBL"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:contentDescription="@string/appwidget_text"
                android:background="@android:color/transparent"
                android:padding="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:layout_alignBaseline="@+id/appwidget_text"
                android:layout_alignBottom="@+id/appwidget_text"
                android:layout_toRightOf="@+id/appwidget_text"
                android:layout_toEndOf="@+id/appwidget_text" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>